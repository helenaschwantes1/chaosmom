---
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <p>{description}</p>
      <hr />
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
